<div class="container">
    <div class="jumbotron">
        <div class="row">
            <div class="col-md-12">
                <a href="<%= root_path %>">
                    <span class="glyphicon glyphicon-menu-left" aria-hidden="true"></span> Back
                </a>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3>Register</h3>
                    </div>
                    <div class="panel-body">
                        <%= form_with model: @user, url: registers_path, html: { class: "form-row" } do |f| %>
                            <div class="form-group">
                                <%= f.label 'first name:'%><br>
                                <%= f.text_field :first_name, id: 'first_name', class: "form-control" %>
                            </div>
                            <div class="form-group">
                                <%= f.label 'last name:'%><br>
                                <%= f.text_field :last_name, id: 'last_name', class: "form-control" %>
                            </div>
                            <div class="form-group">
                                <%= f.label 'email:'%><br>
                                <%= f.text_field :email, id: 'email', class: "form-control" %>
                            </div>
                            <div class="form-group">
                                <%= f.label 'password:'%><br>
                                <%= f.password_field :password, id: 'password', class: "form-control" %>
                            </div>
                            <div class="form-group">
                                <%= f.submit 'Register', class: "btn btn-default" %>
                            </div>
                        <% end %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>